{
  "name": "mern-ecommerce-server",
  "version": "1.0.0",
  "private": true,
  "description": "MERN Ecommerce server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:spetushkov/mern-ecommerce-server.git"
  },
  "author": "Sergey Petushkou",
  "homepage": "https://github.com/spetushkov/mern-ecommerce-server",
  "bugs": {
    "url": "https://github.com/spetushkov/mern-ecommerce-server/issues"
  },
  "main": "src/index.ts",
  "scripts": {
    "build:link": "sudo npm link @spetushkou/api-expressjs",
    "clean": "rm -rf node_modules && rm -rf coverage",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "git": "git add . && git commit -m :rocket: && git push -f",
    "git:setup": "sudo rm -rf .git && git init && git remote add origin git@github.com:spetushkov/mern-ecommerce-server.git",
    "lint": "eslint '**/*.{js,ts}' --fix",
    "mockdata": "ts-node src/__mock__/MockData.ts",
    "mockdata:create": "yarn mockdata --create",
    "mockdata:delete": "yarn mockdata --delete",
    "port": "lsof -w -n -i tcp:8080",
    "setup": "yarn clean && yarn && yarn build:link",
    "start": "yarn start:dev",
    "start:dev": "cross-env NODE_ENV=development yarn start:watch",
    "start:prod": "cross-env NODE_ENV=production ts-node .",
    "start:test": "cross-env NODE_ENV=test yarn start:watch",
    "start:watch": "nodemon --watch 'src/**/*.{js,ts}' --ignore 'src/**/*.test.{js,ts}' --ext 'js,ts' --exec 'ts-node' .",
    "test": "jest --watch",
    "test:all": "jest --watchAll=false",
    "test:coverage": "jest --coverage",
    "test:staged": "jest --onlyChanged"
  },
  "keywords": [
    "MERN, ecommerce"
  ],
  "dependencies": {
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv-expand": "^5.1.0",
    "dotenv-flow": "^3.2.0",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongoose": "^5.10.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv-flow": "^3.1.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-package": "^1.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn compile && lint-staged && yarn test:staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*": "prettier --write"
  }
}
